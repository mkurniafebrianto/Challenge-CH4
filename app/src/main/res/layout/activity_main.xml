<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_kertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/kertas"
        android:textColor="#FF9800"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:rotation="350"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_gunting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gunting"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:rotation="350"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_kertas"/>

    <TextView
        android:id="@+id/tv_batu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batu"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:rotation="350"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gunting"/>

    <TextView
        android:id="@+id/pemain1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:text="Pemain 1"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/ic_paper_background"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_batu"/>

    <TextView
        android:id="@+id/com"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:text="COM"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/ic_paper_background"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_batu"/>

    <ImageView
        android:id="@+id/pemain_batu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/batu"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pemain1"/>

    <ImageView
        android:id="@+id/com_batu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/batu"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com"/>

    <ImageView
        android:id="@+id/pemain_kertas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/kertas"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pemain_batu"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        tools:text="Pemain 1\nMENANG!"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:rotation="350"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/com_kertas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/kertas"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com_batu"/>

    <ImageView
        android:id="@+id/pemain_gunting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/gunting"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pemain_kertas"/>

    <ImageView
        android:id="@+id/com_gunting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/gunting"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com_kertas"/>

    <ImageView
        android:id="@+id/refresh_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@drawable/refresh"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>